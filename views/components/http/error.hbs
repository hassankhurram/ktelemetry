<div class="background-wrapper">
  <svg class="splash-title" viewBox="0 0 1500 150" xmlns="http://www.w3.org/2000/svg">
    <defs>
      <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="0%">
        <stop offset="0%" style="stop-color:#1bec95;stop-opacity:1">
          <animate attributeName="stop-color" values="#34e89e;#0f3443;#34e89e" dur="15s" repeatCount="indefinite"/>
        </stop>
        <stop offset="50%" style="stop-color:#101e24;stop-opacity:1">
          <animate attributeName="stop-color" values="#0f3443;#34e89e;#0f3443" dur="15s" repeatCount="indefinite"/>
        </stop>
      </linearGradient>
    </defs>
    <text x="50%" y="50%" dominant-baseline="middle" text-anchor="middle" class="splash-title-logo" font-weight="bold" fill="url(#grad1)">
      kTelemetry
    </text>
  </svg>

    <div class="splash-title-text">
        <div>Error!</div>
        <div>{{message}}</div>
        <div><button onclick="window.history.back()" class="ktelemetry-btn">Go back</button></div>
    </div>
</div>